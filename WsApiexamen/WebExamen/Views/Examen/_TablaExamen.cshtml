
@model  List<WsApiexamen.Models.tblExamen>

<div class="row">
    <div class="col-sm-12 table-responsive">
        <table class="table table-responsive-sm table-striped">
            <thead>
                <tr>

                    <th class="text-center" style="width:10%">Nombre</th>
                    <th class="text-center" style="width:15%">Descripción</th>
           
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="7" class="text-center">
                            No se encontraron resultados.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr style="font-size: 12px">

                            <td class="text-center" style="text-transform: uppercase;">@item.Nombre</td>
                            <td class="text-center" style="text-transform:uppercase">@item.Descripcion</td>
                         

                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

